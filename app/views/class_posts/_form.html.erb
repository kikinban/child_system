      <% if class_post.image_3.present? %>
        <%= image_tag class_post.image_3, id: :preview_3 %>
        <% else %>
        <%= image_tag "preview_sample.png", id: :preview_3 %>
      <% end %>
      <%= form.label :image_3 %>
      <%= form.file_field :image_3 %>
    </div>
  </div>
  <div id="class_post_title">
    <%= form.label :title , "タイトル:" %>
    <%= form.text_field :title %>
  </div>
